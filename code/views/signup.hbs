{{> header title="Sign Up" }}

<body class="text-center">
  
  {{> nav-loggedout }}
  
  <div class="container mt-4">
    <div class="col-xl-4 offset-xl-4 col-md-6 offset-md-3 col-sm-8 offset-sm-2 text-left">
      
      <h1 class="h5 text-center mt-5">Admin Sign Up</h1>
      
      {{> flash }}
      
      <div class="container-fluid p-3 mt-3 rounded confirmed-bg">
        <form action="/signup" onsubmit="return validatePasswordMatch()" method="POST">
          <label for="email" class="sr-only">Email address</label>
          <input type="email" id="email" class="form-control mb-2 mt-2" name="email" placeholder="Email address" required autofocus>
          <label for="password" class="sr-only">Password</label>
          <input type="password" style="border-bottom-left-radius: 0px; border-bottom-right-radius: 0px; border-bottom: 0px;" id="password" class="form-control" name="password" placeholder="Password" required>
          <label for="verifyPassword" class="sr-only">Confirm Password</label>
          <input type="password" id="verifyPassword" style="border-top-left-radius: 0px; border-top-right-radius: 0px;" class="form-control" placeholder="Verify Password" required>
          <button id="signupButton" type="submit" class="btn confirmed-blue-btn btn-sm text-white btn-block mt-2">Create Account</button>
        </form>
      </div>
      
      <div class="container-fluid p-3 mt-3 rounded confirmed-bg text-center">
        <a href="/signin" class="btn confirmed-blue-btn btn-sm text-white btn-block">Sign In</a>
      </div>
      
    </div>
  </div>
  
  <script>
    function validatePasswordMatch() {
      if (document.getElementById("password").value != document.getElementById("verifyPassword").value) {
        alert("Passwords must match.");
        return false;
      }
      else {
        return true;
      }
    }
  </script>

  {{> footer}}

  {{> bootstrapjs}}
  
</body>
