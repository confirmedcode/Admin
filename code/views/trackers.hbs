{{> header title="Trackers" }}

<body>
  
  {{> nav }}
  
  <div class="container mt-3">
  
    <div class="row">
      <div class="col mt-1">
        <a href="/admin" class="btn btn-primary btn-lg position-absolute">Back</a>
        <h5 class="mb-2 mt-2 text-center">Trackers</h5>
        {{> flash }}
      </div>
    </div>
    
    <div class="row">
      <div class="col-md-6 offset-md-3 my-5 rounded shadow px-3 py-2">
        {{#if trackers}}
        <table class="table table-hover small">
          <thead>
            <tr>
              <th scope="col" class="border-top-0">id</th>
              <th scope="col" class="border-top-0">name</th>
              <th scope="col" class="border-top-0">displayName</th>
            </tr>
          </thead>
          <tbody>
            {{#each trackers}}
            <tr>
              <td>{{this.id}}</td>
              <td>{{this.name}}</td>
              <td>{{this.displayName}}</td>
              <td>
                <a href="/edit-tracker?name={{this.name}}" class="btn btn-primary btn-sm mb-0">Edit</a>
              </td>
            </tr>
            {{/each}}
          </tbody>
        </table>
        {{else}}
          <h6 class="text-center text-muted">No trackers found.</h6>
        {{/if}}
        
        <div class="row">
          <div class="col text-center mt-4 mb-3">
            <a href="/new-tracker" class="btn btn-primary btn-lg">New Tracker</a>
          </div>
        </div>
      </div>
    </div>
    
  </div>
  
  {{> footer}}

  {{> bootstrapjs}}
   
</body>
